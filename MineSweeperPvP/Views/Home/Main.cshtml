@{
    ViewData["Title"] = "Game Lobby";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .header {
            background: white;
            padding: 15px 30px;
            border-radius: 10px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .mode-section {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

            .mode-section h2 {
                color: #333;
                margin-bottom: 20px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .game-options {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .option-card {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 25px;
            border-radius: 12px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            border: 2px solid transparent;
        }

            .option-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.15);
                border-color: #667eea;
            }

            .option-card h3 {
                color: #333;
                margin-bottom: 10px;
                font-size: 20px;
            }

            .option-card p {
                color: #666;
                margin-bottom: 15px;
                font-size: 14px;
            }

        .btn {
            display: inline-block;
            padding: 10px 25px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 20px;
            font-weight: bold;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }

            .btn:hover {
                background: #764ba2;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

        .btn-logout {
            background: #e53e3e;
            padding: 8px 20px;
            font-size: 14px;
        }

            .btn-logout:hover {
                background: #c53030;
            }

        .btn-secondary {
            background: #48bb78;
        }

            .btn-secondary:hover {
                background: #38a169;
            }

        .divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, #667eea, transparent);
            margin: 30px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div>
                <h2 style="margin: 0;">💣 MineSweeper Game Lobby</h2>
                <p style="margin: 5px 0 0 0; color: #666;">Welcome, <strong>@ViewBag.Username</strong></p>
            </div>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-logout">Logout</a>
        </div>

        <!-- Solo Mode Section -->
        <div class="mode-section">
            <h2>🎮 Solo Mode</h2>
            <p style="color: #666; margin-bottom: 20px;">Practice and improve your skills - no pressure, just fun!</p>
            <div class="game-options">
                <div class="option-card">
                    <h3>😊 Easy</h3>
                    <p>10x10 grid, 10 mines<br>Perfect for beginners</p>
                    <a href="@Url.Action("Play", "Game", new { difficulty = "Easy" })" class="btn btn-secondary">Play Easy</a>
                </div>

                <div class="option-card">
                    <h3>🤔 Medium</h3>
                    <p>16x16 grid, 40 mines<br>Balanced challenge</p>
                    <a href="@Url.Action("Play", "Game", new { difficulty = "Medium" })" class="btn btn-secondary">Play Medium</a>
                </div>

                <div class="option-card">
                    <h3>😈 Hard</h3>
                    <p>20x20 grid, 80 mines<br>Expert level</p>
                    <a href="@Url.Action("Play", "Game", new { difficulty = "Hard" })" class="btn btn-secondary">Play Hard</a>
                </div>
            </div>
        </div>

        <div class="divider"></div>

        <!-- PvP Mode Section -->
        <div class="mode-section">
            <h2>⚔️ Player vs Player Mode</h2>
            <p style="color: #666; margin-bottom: 20px;">Compete with friends in real-time!</p>
            <div class="game-options">
                <div class="option-card">
                    <h3>🎮 Create Room</h3>
                    <p>Start a new game room and invite your friend to join</p>
                    <a href="@Url.Action("Create", "Room")" class="btn">Create New Room</a>
                </div>

                <div class="option-card">
                    <h3>🚪 Join Room</h3>
                    <p>Enter a room code to join an existing game</p>
                    <a href="@Url.Action("Join", "Room")" class="btn">Join Existing Room</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>